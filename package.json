{
  "name": "react-hot-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS project with hot code reloading",
  "scripts": {
    "start": "webpack-dev-server --config webpack/config.babel.js",
    "lint": "standard --verbose | snazzy",
    "build": "NODE_ENV=production webpack --config webpack/production.babel.js",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cookpete/react-hot-boilerplate.git"
  },
  "keywords": [
    "react",
    "boilerplate",
    "hot",
    "reload",
    "webpack"
  ],
  "author": "Pete Cook <pete@cookpete.com> (http://github.com/cookpete)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cookpete/react-hot-boilerplate/issues"
  },
  "homepage": "https://github.com/cookpete/react-hot-boilerplate",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.53",
    "@babel/core": "^7.0.0-beta.53",
    "@babel/preset-env": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.0.0-beta.53",
    "@babel/preset-stage-3": "^7.0.0-beta.53",
    "@babel/register": "^7.0.0-beta.53",
    "autoprefixer": "^8.6.2",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta.4",
    "css-loader": "^1.0.0",
    "file-loader": "^1.1.10",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "optimize-css-assets-webpack-plugin": "^4.0.2",
    "postcss-loader": "^2.1.5",
    "precss": "^3.1.1",
    "react-hot-loader": "^4.3.3",
    "snazzy": "^7.0.0",
    "standard": "^11.0.0",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-stylish": "^0.1.8"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-stage-3",
      "@babel/preset-react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "precss": {}
    }
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
