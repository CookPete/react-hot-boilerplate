{
  "name": "react-hot-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS project with hot code reloading",
  "scripts": {
    "start": "webpack-dev-server",
    "lint": "standard --verbose | snazzy",
    "build": "cross-env NODE_ENV=production webpack --config webpack.production.babel.js",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cookpete/react-hot-boilerplate.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack"
  ],
  "author": "Pete Cook <pete@cookpete.com> (http://github.com/cookpete)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cookpete/react-hot-boilerplate/issues"
  },
  "homepage": "https://github.com/cookpete/react-hot-boilerplate",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "@babel/preset-stage-0": "^7.0.0-beta.40",
    "@babel/register": "^7.0.0-beta.40",
    "autoprefixer": "^8.0.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "8.0.0-beta.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.10",
    "extract-text-webpack-plugin": "^4.0.0-alpha.0",
    "file-loader": "^1.1.10",
    "html-webpack-plugin": "webpack-contrib/html-webpack-plugin",
    "postcss-loader": "^2.1.1",
    "precss": "^3.1.1",
    "react-hot-loader": "^4.0.0",
    "snazzy": "^7.0.0",
    "standard": "^11.0.0",
    "style-loader": "^0.20.2",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9",
    "webpack-dev-server": "^3.0.1-beta.0"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-stage-0",
      "@babel/preset-react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "precss": {}
    }
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
